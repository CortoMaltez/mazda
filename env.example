# ========================================
# CONFIGURATION PROSPERALINK
# ========================================
# Copier ce fichier vers .env.local et remplir les valeurs

# ========================================
# BASE DE DONNÉES
# ========================================
# SQLite pour développement, MySQL pour production
DATABASE_URL="file:./dev.db"

# ========================================
# AUTHENTIFICATION (NEXTAUTH)
# ========================================
# Générer une clé secrète: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# ========================================
# GOOGLE GEMINI IA
# ========================================
# Obtenir sur: https://makersuite.google.com/app/apikey
GOOGLE_GEMINI_API_KEY="your-gemini-api-key-here"

# ========================================
# GOOGLE WORKSPACE (OAUTH2)
# ========================================
# Obtenir sur: https://console.cloud.google.com/apis/credentials
# Créer un projet Google Cloud et activer les APIs:
# - Google Drive API
# - Google Calendar API
# - Google Docs API
# - Google OAuth2 API
GOOGLE_CLIENT_ID="your-google-client-id-here"
GOOGLE_CLIENT_SECRET="your-google-client-secret-here"

# ========================================
# STRIPE (PAIEMENTS)
# ========================================
# Clés de test pour développement
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key_here"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key_here"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret_here"

# ========================================
# META (RÉSEAUX SOCIAUX)
# ========================================
# Optionnel - pour l'intégration Facebook/Instagram
META_ACCESS_TOKEN="your-meta-access-token"
META_PIXEL_ID="your-meta-pixel-id"

# ========================================
# WHATSAPP BUSINESS API
# ========================================
# Optionnel - pour le bot WhatsApp
WHATSAPP_ACCESS_TOKEN="your-whatsapp-access-token"
WHATSAPP_PHONE_NUMBER_ID="your-whatsapp-phone-number-id"

# ========================================
# CONFIGURATION AVANCÉE
# ========================================
# Environnement (development/production)
NODE_ENV="development"

# Port du serveur (optionnel)
PORT=3000

# URL de base pour les webhooks
WEBHOOK_BASE_URL="http://localhost:3000"

# ========================================
# MONITORING ET ANALYTICS
# ========================================
# Optionnel - pour le monitoring
SENTRY_DSN="your-sentry-dsn"
GOOGLE_ANALYTICS_ID="your-ga-id"

# ========================================
# LIMITES ET CONFIGURATIONS
# ========================================
# Budget IA mensuel (en USD)
AI_MONTHLY_BUDGET=1250

# Limite de requêtes IA par minute
AI_RATE_LIMIT=60

# Taille maximale des fichiers upload (en MB)
MAX_FILE_SIZE=10

# ========================================
# SÉCURITÉ
# ========================================
# Clé de chiffrement pour les données sensibles
ENCRYPTION_KEY="your-encryption-key-here"

# Durée de session (en secondes)
SESSION_MAX_AGE=86400

# ========================================
# NOTES IMPORTANTES
# ========================================
# 1. Ne jamais commiter .env.local dans git
# 2. Utiliser des clés de test pour le développement
# 3. Changer toutes les clés en production
# 4. Vérifier les permissions des fichiers
# 5. Configurer les webhooks Stripe
# 6. Tester l'API Gemini avant déploiement 